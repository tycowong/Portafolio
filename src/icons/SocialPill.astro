---
interface Props {
  class?: string;
  href?: string;
}

const { class: className } = Astro.props
---

<a
  class=`rounded-full border no-underline hover:shadow-red-300 hover:shadow-lg hover:bg-red-100/10 border-gray-900 flex justify-center items-center gap-x-2 p-1 px-2 md:py-2 hover:scale-110 transition duration-200 text-xs md:text-sm ${className}`
  {...Astro.props}
  target="_blank"
  rel="noopener noreferrer"
>
  <slot />
</a>
